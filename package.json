{
  "name": "quickcss",
  "version": "1.0.7",
  "description": "Fast & light CSS styling",
  "main": "dist/quickcss.js",
  "browser": {
    "./debug": "dist/quickcss.debug.js",
    "./dist/quickcss.js": "src/quickcss.coffee"
  },
  "browserify": {
    "transform": [
      "simplyimport/compat"
    ]
  },
  "simplyimport": {
    "finalTransform": [
      ".config/transforms/minify-super",
      ".config/transforms/minify-rename",
      ".config/transforms/minify-simple"
    ]
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "postversion": "npm run build",
    "prepublishOnly": "npm run test",
    "test": "npm run test:electron -s || true",
    "test:local": "open test/testrunner.html",
    "test:karma": "karma start .config/karma.conf.coffee",
    "test:electron": "karma start --single-run --browsers Electron .config/karma.conf.coffee",
    "test:chrome": "karma start --single-run --browsers Chrome .config/karma.conf.coffee",
    "test:firefox": "karma start --single-run --browsers Firefox .config/karma.conf.coffee",
    "test:safari": "karma start --single-run --browsers Safari .config/karma.conf.coffee",
    "build": "npm run build:js && npm run build:js:debug && npm run build:test",
    "build:js": "simplyimport bundle --umd quickcss src/quickcss.coffee > dist/quickcss.js",
    "build:js:debug": "simplyimport bundle --umd quickcss -d src/quickcss.coffee > dist/quickcss.debug.js",
    "build:test": "simplyimport bundle -d test/test.coffee > test/test.js",
    "watch": "npm run watch:js & npm run watch:test",
    "watch:js": "simplywatch -g 'src/*.coffee' -x 'npm run compile:js:debug -s'",
    "watch:test": "simplywatch -g 'test/test.coffee' -x 'npm run compile:test -s'",
    "coverage:badge": "badge-gen -d ./.config/badges/coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danielkalen/quickcss.git"
  },
  "author": "danielkalen",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/danielkalen/quickcss/issues"
  },
  "homepage": "https://github.com/danielkalen/quickcss#readme",
  "devDependencies": {
    "badge-gen": "^1.0.0",
    "chai": "^3.5.0",
    "closure-compiler-service": "^0.6.1",
    "electron": "^1.6.11",
    "fs-jetpack": "^1.1.0",
    "google-closure-compiler-js": "^20170521.0.0",
    "jquery": "^3.1.1",
    "json": "^9.0.4",
    "karma": "^1.4.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.1.1",
    "karma-electron": "^5.2.1",
    "karma-firefox-launcher": "^1.0.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.1",
    "karma-opera-launcher": "^1.0.0",
    "karma-safari-launcher": "^1.0.0",
    "mocha": "^3.2.0",
    "simplyimport": "^4.0.0-q",
    "simplywatch": "^3.0.0-j",
    "smart-extend": "^1.6.0",
    "uglify-js": "^3.0.22"
  }
}
